{
  "compilerOptions": {
    "module": "esnext",
    "target": "esnext",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "outDir": "dist",
    "sourceMap": true,
    "declaration": true,
    "emitDeclarationOnly": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "typeRoots": ["node_modules/@types", "src/@types"],
    "moduleResolution": "node",
    "baseUrl": "."
  },
  "compileOnSave": true,
  "include": ["src"],
  "exclude": ["tests"],
  "ts-node": {
    "files": true
  }
}
